            List<medicos> Lista = new List<medicos>();

            foreach (MedicosDAL.H2_Medicos_Lista_por_EspecialidadRow row in aTable.Rows)
            {
                medicos m = new medicos();
                m.Medico = row.ApellidoYNombre;
                m.Id = row.Id;
                Lista.Add(m);
            }

            return Lista;
        }

